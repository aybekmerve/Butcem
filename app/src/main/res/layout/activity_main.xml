<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Toplam Gelir:"
            android:textSize="25dp" />


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="2dp"
            >

            <Button


                android:id="@+id/btn1"
                android:layout_width="300dp"
                android:layout_height="150dp"
                android:layout_marginRight="5dp"
                android:layout_weight="0.5"
                android:background="@mipmap/market"
                android:gravity="center" />

            <Button
                android:id="@+id/btn2"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_weight="0.5"
                android:background="@mipmap/giyim" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp">

            <Button
                android:id="@+id/btn3"
                android:layout_width="300dp"
                android:layout_height="150dp"
                android:layout_marginRight="5dp"
                android:layout_weight="0.5"
                android:background="@mipmap/faturalar"
                android:gravity="center" />

            <Button
                android:id="@+id/btn4"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_weight="0.5"
                android:background="@mipmap/kaferest" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <Button
                android:id="@+id/btn5"
                android:layout_width="300dp"
                android:layout_height="150dp"
                android:layout_marginRight="5dp"
                android:layout_weight="0.5"
                android:background="@mipmap/social"

                android:gravity="center" />

            <Button
                android:id="@+id/btn6"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_weight="0.5"
                android:background="@mipmap/diger" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            >

            <Button
                android:id="@+id/gecmisbtn"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginRight="5dp"
                android:layout_weight="0.5"
                android:background="@color/colorABackground2"
                android:text="Geçmişi Gör"
                android:textColor="@color/yaziRengi" />

            <Button
                android:id="@+id/gelireklebtn"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginRight="5dp"
                android:layout_weight="0.5"
                android:background="@color/colorABackground2"
                android:text="Gelir Ekle"
                android:textColor="@color/yaziRengi" />

        </LinearLayout>
    </LinearLayout>
</ScrollView>

